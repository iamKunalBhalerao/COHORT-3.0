{
  "name": "http-backend",
  "version": "1.0.0",
  "description": "HTTP backend service for Chat App",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "build": "tsc -b",
    "start": "tsc -b && node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:debug": "ts-node-dev --inspect --respawn src/server.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write\"src/**/*.ts\""
  },
  "keywords": [
    "express",
    "backend",
    "api"
  ],
  "author": "Kunal Bhalerao",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@repo/common": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/env": "workspace:*",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
